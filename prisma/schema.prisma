generator client {
  provider = "prisma-client-js"
  output = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db"
}
model Student {
  id Int @id @default(autoincrement())
  fullName String
  class Class @relation(fields: [classId], references: [id])
  classId Int

  readingRecords ReadingRecord[]
}

model Teacher {
  id Int @id @default(autoincrement())
  fullName String
  classes Class[]
}

model Class {
  id Int @id @default(autoincrement())
  section String
  teacher Teacher @relation(fields: [teacherId], references: [id])
  teacherId Int
  students Student[]

  readingRecords ReadingRecord[]
}

model ReadingRecord {
  id Int @id @default(autoincrement())
  student Student @relation(fields: [studentId], references: [id])
  studentId Int
  class Class @relation(fields: [classId], references: [id])
  classId Int
  score Int
  section String
  startTime DateTime
  endTime DateTime
}