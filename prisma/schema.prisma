generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Student {
  id Int @id @default(autoincrement())
  fullName String
  class Class @relation(fields: [classId], references: [id])
  classId Int
}

model Teacher {
  id Int @id @default(autoincrement())
  fullName String
  classes Class[]
}

model Class {
  id Int @id @default(autoincrement())
  section String
  teacher Teacher @relation(fields: [teacherId], references: [id])
  teacherId Int
  students Student[]
}